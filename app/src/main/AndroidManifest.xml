<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs2340.teamnasamovierecommender">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.HomeActivity"></activity>
        <activity android:name=".activity.MovieDetailActivity"></activity>
        <activity android:name=".activity.AccountActivity"></activity>
        <activity android:name=".activity.ForgotPasswordActivity"></activity>
        <activity android:name=".activity.ChangePasswordActivity"></activity>
        <activity android:name=".activity.AdminActivity"></activity>
    </application>

</manifest>
